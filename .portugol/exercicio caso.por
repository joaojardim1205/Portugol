programa {
  funcao inicio() {
    
    inteiro n
    leia(n)

    escolha(n) {
      caso 1:
            escreva("você digitou 1")
            pare
      caso 2:
            escreva("você digitou 2")
            pare 
      caso 3:
            escreva("você digitou 3")
            pare  
      caso contrario:
            escreva("numero inválido \n")
            escreva("escolha entre os numeros 1, 2 ou 3 \n")          
    }
  }
}
