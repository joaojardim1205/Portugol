programa {
  funcao inicio() {
    cadeia v
    leia(v)

    escolha(v) {
      caso "a":
            escreva("letra e")
            pare
      caso "e":
            escreva("letra i")
            pare
      caso "i":
            escreva("letra o")
            pare
      caso "o":
            escreva("letra u")
            pare
      caso contrario:
          escreva("essa nao é uma vogal")                      

    }
  }
}
